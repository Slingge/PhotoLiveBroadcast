<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--编辑用户名-->
    <include
        android:id="@+id/include"
        layout="@layout/include_basetop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="基本信息"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_shot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="拍摄活动信息"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_photo_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="相册分类"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color" />

            <TextView
                android:id="@+id/tv_advertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="下方自定义广告"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_watermark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="水印功能"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_interact_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="互动设置"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_admin_cameraman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="管理摄影师"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_admin_examine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="管理审核员"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tv_admin_trim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="管理修图师"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color" />

            <TextView
                android:id="@+id/tv_watch_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_jinru"
                android:padding="13dp"
                android:text="观看设置"
                android:textColor="@color/black"
                android:textSize="@dimen/main_fant" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:text="开播按钮"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_fant" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_fun_pen"
                    android:paddingRight="15dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>