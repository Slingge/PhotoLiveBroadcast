<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/include_basetop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="开始时间"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_jinru"
            android:gravity="right"
            android:padding="13dp"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="结束时间"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_jinru"
            android:gravity="right"
            android:padding="13dp"
            android:text="08/16"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:text="活动地址"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/address"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_jinru"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:padding="12dp"
            android:text="活动地址活动地址活动地址活动地址"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:text="活动详情"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/detail"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_jinru"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:padding="12dp"
            android:text="活动详情活动详情活动详情活动详情活动详情活动详情"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:text="活动流程"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <TextView
            android:id="@+id/tv_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/process"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_jinru"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:padding="12dp"
            android:text="活动流程活动流程活动流程活动流程活动流程活动流程"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/publicNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:text="主办方公众号"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <TextView
            android:id="@+id/tv_publicNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/publicNum"
            android:background="@color/white"
            android:drawableRight="@mipmap/icon_jinru"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:padding="12dp"
            android:text="主办方公众号"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

    </RelativeLayout>


</LinearLayout>