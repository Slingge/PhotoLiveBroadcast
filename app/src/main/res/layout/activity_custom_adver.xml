<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/include_basetop" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="13dp"
            android:text="自定义广告功能"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />


        <ImageView
            android:id="@+id/ic_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_fun_close" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="13dp"
            android:text="广告文字提示"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />


        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_jinru"
            android:gravity="right"
            android:hint="资讯热线"
            android:padding="13dp"
            android:singleLine="true"
            android:textColor="@color/tv_home"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:text="广告形式"
            android:textColor="@color/black"
            android:textSize="@dimen/main_fant" />

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/tab_check"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="图片"
                android:textColor="#999999"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/tab_check"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="跳转"
                android:textColor="#999999"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/tab_check"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="预约"
                android:textColor="#999999"
                android:textSize="15sp" />
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传跳转后展示的图片"
            android:textColor="@color/colorTabText"
            android:textSize="@dimen/sub_fant" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/tv_image"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_add" />

    </RelativeLayout>


    <EditText
        android:id="@+id/et_link"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入跳转链接"
        android:padding="13dp"
        android:textColor="@color/tv_home"
        android:textSize="15sp"
        android:visibility="gone" />


    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/bg_them11"
        android:text="新增分类"
        android:textColor="@color/white"
        android:textSize="17sp" />


</LinearLayout>